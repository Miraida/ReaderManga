<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.sign_or_register.SignOrRegisterFragment">

    <include layout="@layout/fragment_splash" />

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/sign_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/sign_btn"
        style="@style/MainLinedButton"
        android:text="@string/sign_in"
        android:background="@drawable/bg_line_btn"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/sign_background"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/register_btn"
        style="@style/MainColoredButton"
        android:text="@string/register"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_main_btn"
        app:layout_constraintTop_toBottomOf="@id/sign_btn"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>