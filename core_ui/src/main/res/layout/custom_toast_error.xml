<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customToastCont"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="@dimen/error_layout_height"
    android:layout_gravity="center|bottom"
    android:paddingVertical="10dp"
    android:background="#00ffffff"
    android:paddingHorizontal="15dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/attentionIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_error"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/toastMsgTv"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/attentionIcon"
        app:layout_constraintStart_toEndOf="@+id/attentionIcon"
        app:layout_constraintTop_toTopOf="@id/attentionIcon"
        android:layout_marginStart="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>