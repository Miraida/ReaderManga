<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--TEXTVIEW -->
    <style name="H1_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <!--TEXT INPUT LAYOUT | EDITTEXT-->
    <style name="Text_Input_Layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="MainInput_EditText" >
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ErrorTextAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="HelperTextAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">8sp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <!-- BUTTON  -->
    <style name="MainButton" >
        <item name="android:layout_height">52dp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MainColoredButton" parent="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="MainLinedButton" parent="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!--TAB-->
    <style name="Tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

</resources>